    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/cli.ts",
            "args": ["--watch"],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test File",
            "args": [ "${workspaceFolder}/${relativeFile}" ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}