{
    "updateToc": true,
    "files": [
        "**.md",
        "site/styles/theme.css"
    ],
    "exclude": [
        ".git",
        "node_modules",
        "lib",
        "site/components/**",
        "site/pages/normal/normal.ts",
        "src/extras/**",
        "src/tests/**",
        "README.md"
    ],
    "serveOptions": {
        "keyFile": "dev.key",
        "certFile": "dev.cert"
    },
    "deployMode": "dev",
    "frontMatter": {
        "projectName": "LiTScript",
        "repository": "https://github.com/johtela/litscript",
        "download": "https://www.npmjs.com/package/litscript",
        "license": "license.html",
        "logo": "images/bulb.svg",
        "footer": "Copyright Â© 2023 Tommi Johtela",
        "footerLocation": "content-area",
        "syntaxHighlight": "son-of-obsidian",
        "userTheme": "./src/user-theme.less"
    }
}