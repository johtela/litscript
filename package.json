    "@types/minimatch": "^6.0.0",
    "@types/node": "^24.10.1",
    "lits-extras": "^2.0.0",
    "taitto": "^1.1.1"
  },
  "dependencies": {
    "@iktakahiro/markdown-it-katex": "^4.0.1",
    "esbuild": "^0.25.9",
    "highlight.js": "^11.11.1",
